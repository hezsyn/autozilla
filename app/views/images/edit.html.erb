        <div id="<%= direction %>" class="row collapse">
          <%= render 'clonezilla_versions/assets/paraForm', locals: {junBug: @image.send("#{direction}"), clonezilla: @image.clonezilla_version_id} %>
        </div><!-- End of row that is collapsed with Grub Upload -->
      </div>

    <% end %> -->
</div><!-- End of Overall Column -->


</div>

