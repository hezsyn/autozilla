        <h2>
          <%= button_tag class: "btn btn-info", "data-toggle" => "collapse", "data-target" => "#" + direction do %>
            <span class="glyphicon glyphicon-plus"></span>
          <% end %>

         <%= @image.send("#{direction}").purpose %>

        </h2>
      </div>

