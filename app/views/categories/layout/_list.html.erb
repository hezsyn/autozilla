  <div class="col-xs-3">
    <h2>Categories</h2>

    <div class="list-group">
      <% @categories.each do |cat| %>
        <%= link_to cat.name, category_path(cat.id), class: "list-group-item" %>
      <% end %>
    </div>

    <hr>

    <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="newCategory">New Category</button>


  <!-- New Category Modal diaglogue -->
    <div class="model fade" id="newCategory" tabindex="1" role="dialog" aria-labelledby="newCategoryLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="model-content">
          <div class="modal-header">
            <h5 class="modal-title" id="newCategoryLabel">New Category</h5>
            <button type="button" class="close" data-miss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </div>

    </div>

  </div>