<div class="row">

  <%= render 'categories/layout/list' %>

  <div class="col-xs-8">

    <%= form_for :category do |f| %>
      <p>
        <%= f.collection_select :category_id, Category.where(:category_id => NIL).all, :id, :name, include_blank: true %>
      </p>
      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :description %>
        <%= f.text_field :description %>
      </p>
      <p>
        <%= f.check_box :is_enabled %>
        <%= f.label "Enabled?" %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>

</div>