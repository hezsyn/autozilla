  <div class="container">

    <%= render 'layouts/error' %>

    <div class="row">
        <%= button_tag 'New Clonezilla Version', class: "btn btn-primary btn-sm", "data-toggle" => "modal", "data-target" => "#newVersion" %>
      <div class="col">
        <h1>List of Clonezillas</h1>
      </div>
    </div>

    <div class="row">
      <table class="table table-hover table-striped">
        <thead>
          <th class="text-center" width="5%">Status?</th>
          <th class="text-center" width="5%">Default?</th>
          <th class="text-center"  width="5%">#</th>
          <th>Name</th>
        </thead>
        <tbody>
    <% i = 1 %>
    <% @czs.each do |t| %>
          <tr class="clickable-row" data-href=<%= edit_clonezilla_version_path(t) %>>
            <td>
              <%= render 'statusBtn', cz: t  %>
            </td>
            <td>
              <%= render 'changeDefButton', cz: t %>
            </td>
            <td class="text-center"><%= i %></td>
            <td><%= t.name %></td>
          </tr>
        <% i +=1 %>
    <% end %>
        </tbody>
      </table>
    </div>
  </div>

<!-- Starting of the Modal for Creation of a new Clonezilla -->
<%= render 'newClonezillaBTN' %>