  <div class="container">
    
    <div class="row">
        <div class="col">
            <%= render 'layouts/error' %>
        </div>
    </div>

    <div class="row">
        <%= button_tag 'New Location', class: "btn btn-primary btn-sm", "data-toggle" => "modal", "data-target" => "#newLocation" %>
      <div class="col">
        <h1>List of Locations</h1>
      </div>
    </div>
    
    <div class="row">
        <div class="col">
            <table class="table table-hover table-strip">
                <thead>
                    <tr>
                        <th width="10%">Status?</th>
                        <th width="10%">Default?</th>
                        <th width="10%">Update</th>
                        <th width="10%">Name</th>
                        <th width="30%">Location</th>
                        <th width="30%">Description</th>
                    </tr>
                </thead>
                <tbody>
                <% @locations.order(:name).each do |loc| %>
                    <tr>
                        <%= form_for loc do |form| %>
                                <td>
                                    <%= render 'changeStatus', location: loc %>
                                </td>

                                <td>
                                    <%= render 'changeDefault', location: loc %>
                                </td>

                                <td>
                                    <%= form.submit 'Update', class: "btn btn-sm btn-primary" %> 
                                </td>

                                <td>
                                    <%= form.text_field :name  %>
                                </td>
                                <td>
                                    <%= form.text_field :location %>
                                </td>
                                <td>
                                    <%= form.text_field :description  %>
                                </td>
                    <% end %>
                </tr>
               <% end %>
                </tbody>
            </table>
        </div>
  </div>

<!-- Starting of the Modal for Creation of a new Clonezilla -->
<%= render 'newLocation' %>