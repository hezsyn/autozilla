

  <div class="col-xs-3">
    <div class="page-header">
      <h1>Pools</h1>
    </div>
    <%= link_to 'New Pool', new_pool_path, class: "btn btn-primary btn-block" %>
  </div>


  <div class="col-xs-8">

    <div class="row">
      <div class="jumbotron">
        <h2>List of Pools</h2>
      </div>
    </div>


    <div class="row">
      <table class="table table-hover table-striped">
        <thead>
          <th>#</th>
          <th>Name</th>
          <th>Edit</th>
          <th>Status</th>
        </thead>
        <tbody>
    <% i = 1 %>
    <% @pools.each do |t| %>
          <tr>
            <td><%= i %></td>
            <td><%= t.name %></td>
            <td><%= t.description %></td>
            <td><%= is_enabled?(t.is_enabled) %></td>
            <td><%= link_to 'Edit', edit_pool_path(t) %></td>
            <% if t.is_enabled == 1 %>
              <td><%= link_to 'Disable', pool_path(t), method: :delete, data: { confirm: 'Are you sure?'} %></td>
            <% else %>
              <td><%= link_to 'Enable', pool_path(t), method: :enable, data: { confirm: 'Are you sure?'} %></td>
            <% end %>
          </tr>
        <% i +=1 %>
    <% end %>
        </tbody>
      </table>
    </div>
  </div>