  <div class="col-xs-2">
    <div class="page-header">
      <h1>Pools</h1>
    </div>
    <%= button_tag 'New Pool', class: "btn btn-primary btn-block", "data-toggle" => "modal", "data-target" => "#newPool" %>
  </div>


  <div class="col-xs-8">

    <div class="row">
        <h1>List of Pools</h1>
    </div>


    <div class="row">
      <table class="table table-hover table-striped">
        <thead>
          <th>#</th>
          <th>Name</th>
          <th>Edit</th>
          <th>Status</th>
        </thead>
        <tbody>
    <% i = 1 %>
    <% @pools.each do |t| %>
          <tr>
            <td><%= i %></td>
            <td><%= t.name %></td>
            <td><%= t.description %></td>
            <td><%= is_enabled?(t.is_enabled) %></td>
            <td><%= link_to 'Edit', edit_pool_path(t) %></td>
          </tr>
        <% i +=1 %>
    <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div id="newPool" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismis="modal">&times;</button>
          <h4>New Pool Creation</h4>
        </div><!-- End of Modal Header -->

        <div class="modal-body">
          <%= form_for @newPool do |f| %>
            <div class="input-group">
              <span class="input-group-addon"><%= f.label :name %></span>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <br>
            <div class="input-group">
              <span class="input-group-addon"><%= f.label :description %></span>
              <%= f.text_area :description, class: "form-control" %>
            </div>
        </div><!-- End of Modal Body -->

        <div class="modal-footer">
            <%= f.submit 'Subimt', class: "btn btn-primary" %>
            <%= button_tag 'Close', class: "btn btn-default", "data-dismiss" => "modal" %>
          <% end %>
        </div><!-- End of Modal Footer -->

      </div><!-- End of Modal Content -->

    </div><!-- End of dialog -->
  </div><!-- End of Modal Div -->