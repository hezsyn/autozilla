<% @cfg.each do |cfg| %>
  <%= form_for cfg do |f| %>
    <div class="input-group">
      <span class="input-group-addon"><%= f.submit 'Update' %></span>
      <span class="input-group-addon"><%= f.label cfg.name %></span>
        <%= f.text_area :value, class: "form-control" %>
    </div>
  <% end %>
<% end %>