<%= render 'systems/list' %>


<div class="col-xs-8">

  <%= render 'layouts/error' %>


  <div class="jumbotron">
    <%= form_for [@category, @system] do |sys| %>

    <div class="row">
      <div class="col-xs-5">

        <div class="row">
          <div class="input-group">
            <%= sys.text_field :name, class: "form-control input-lg" %>
          </div>
        </div>

        <br>

        <div class="row">
          <div class="input-group">
            <span class="input-group-addon">Default Disk</span>
              <%= sys.text_field :default_disk, class: "form-control" %>
          </div>
        </div>

      </div><!-- End of Column -->

      <div class="col-xs-5 col-xs-offset-1">

        <div class="row">
          <h3><%= @system.file_location %></h3>
        </div>

        <br>

        <div class="row">
          <div class="input-group">
            <span class="input-group-addon">Description</span>
            <%= sys.text_area :description, class: "form-control" %>
          </div>
        </div>

      </div><!-- End of Column -->
    </div><!-- End of Row -->

    <div class="row">
      <%= sys.submit 'Update', class: "btn btn-primary btn-sm" %>
      <% end %>
        <% if @system.is_enabled == 1 %>
          <%= button_to 'Archive', category_system_path(@category, @system), method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-sm btn-danger"  %>
        <% else %>
          <%= button_to 'Enable', category_system_path(@category, @system), method: :delete, data: {confirm: 'Are you sure?' }, class: "btn btn-sm btn-success" %>
        <% end %>
    </div>
    <div class="row">
      <%= button_tag 'New Image', class: "btn btn-success btn-sm", "data-toggle" => "modal", "data-target" => "#newImage"%>
    </div>
  </div><!--  End of JumbroTron -->

    <table class="table table-stripped table-hover">
      <thead>
        <th></th>
        <th>Pool</th>
        <th>Name</th>
        <th>Type</th>
        <th>Operating System</th>
        <th>Clonezilla Version</th>
        <th>Last Updated</th>
      </thead>
      <tbody>
      <% @system.images.each do |t| %>
        <tr>
          <td><%= link_to 'Edit', edit_category_system_image_path(@category, @system, t) %></td>
          <td><%= t.pool.name %></td>
          <td><%= t.name %></td>
          <td><%= t.image_type.name %></td>
          <td><%= t.ose.name %></td>
          <td><%= t.clonezilla_version.name %></td>
          <td><%= t.updated_at.strftime("%d%b%Y") %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>

  <div id="newImage" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
          <div class="modal-header">
            <%= button_tag class: "close", "data-dismiss" => "modal" do %>
              &times;
            <% end %>
            <h4 class="modal-title">New Image</h4>
          </div>

          <div class="modal-body">
            <%= form_for [@category, @system, @system.images.build] do |f| %>

              <div class="input-group">
                <span class="input-group-addon"><%= f.label :name %></span>
                <%= f.text_field :name, class: "form-control" %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon"><%= f.label :description %></span>
                <%= f.text_area :description, class: "form-control" %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon"><%= f.label :disk %></span>
                <%= f.text_field :disk, class: "form-control", value: @system.default_disk %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon"><%= f.label :image_type %></span>
                <%= f.collection_select :image_type_id, @image_types, :id, :name, {include_blank: true}, {class: "form-control"} %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon"><%= f.label :pool %></span>
                <%= f.collection_select :pool_id, @pools, :id, :name, {include_blank: true}, {class: "form-control"} %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon">OS</span>
                <%= f.collection_select :ose_id, @oses, :id, :name, {include_blank: true}, {class: "form-control"} %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon"><%= f.label :image_status %></span>
                <%= f.collection_select :image_status_id, @imagesStatuses, :id, :name, {include_blank: true}, {class: "form-control"} %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon"><%= f.label :clonezilla_version %></span>
                <%= f.collection_select :clonezilla_version_id, @clonezillas, :id, :name, {include_blank: true}, {class: "form-control"} %>
              </div>

          </div>

          <div class="modal-footer">
              <%= f.submit 'Create Image', class: "btn btn-warning"  %>
              <%= button_tag 'Close', class: "btn btn-default", "data-dismiss" => "modal" %>
            <% end %>
          </div>
        </div>

    </div>
  </div>

</div>